# /home/lenovo/code/ltphongssvn/task-management-final/.env.example
# Environment Variables Template
# Copy this file to .env and replace with your actual values

# Application Environment
# Options: development, production
NODE_ENV=development

# Server Port
# Render provides this automatically in production
PORT=3000

# MongoDB Connection String
# Local MongoDB example: mongodb://localhost:27017/task-management
# MongoDB Atlas format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
# Replace <username>, <password>, <cluster>, and <database> with your actual values
MONGODB_URI=your_mongodb_connection_string_here

# Session Secret Key
# Generate secure random string (32+ characters)
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_secure_session_secret_here
